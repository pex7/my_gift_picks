.container
  .row
    .jumbotron.main-header
      %h1 Welcome to My Gift Picks
      %i.fa.fa-diamond.fa-4x
      %i.fa.fa-bicycle.fa-4x
      %i.fa.fa-futbol-o.fa-4x
      %i.fa.fa-car.fa-4x
      %i.fa.fa-gamepad.fa-4x
      %i.fa.fa-tablet.fa-4x
  .row
    -if user_signed_in?
      .col-md-4.col-md-offset-4.text-center
        =link_to "My List", user_picks_path(current_user.id), class: "btn btn-warning btn-lg"
    -else user_signed_in?
      .col-md-4.col-md-offset-4.text-center
        %h3
        =link_to "Login", new_user_session_path
        to add a gift to your list.
  %p
  .row
    .col-md-4.col-md-offset-4.text-center
      -@users.each do |u|
        =link_to u.email, user_picks_path(u)
        %br
